<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Debt" parent="Base.Theme.Debt">
        <!-- Transparent system bars for edge-to-edge. -->
        <!--<item name="android:navigationBarColor">@android:color/transparent</item> -->

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="appWindowBackground">@color/window_background</item>
        <item name="android:windowBackground">?appWindowBackground</item>

        <item name="appCardBackground">@color/card_background</item>
        <item name="colorSurface">?appCardBackground</item>

        <item name="appBsDetalhesEdittextBackground">@color/back_bs_detalhes_edittext</item>


        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">@color/window_background</item>

        <item name="appTextoCorPrimaria">?colorPrimary</item>
        <item name="appTextoCorSecundaria">?colorSecondary</item>
        <item name="appTextoCorDestaque">?colorAccent</item>


    </style>


    <style name="TextInputEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">?attr/appTextoCorPrimaria</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">?attr/appTextoCorPrimaria</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TecladoCalculadoraStyle" parent="android:Widget.TextView">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">?attr/appTextoCorPrimaria</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TecladoCalculadoraSinalStyle" parent="TecladoCalculadoraStyle">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="DetalhesDespesaTextInputLayoutStyle" parent="TextInputLayoutStyle">

        <item name="android:background">@color/transparent</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DetalhesDespesa_EditText_Style" parent="TextInputEditTextStyle">

        <item name="android:background">@drawable/back_bs_despesas_edittexts</item>
        <item name="android:focusable">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>